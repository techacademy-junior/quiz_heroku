<p id="notice"><%= notice %></p>

<h1>Questions</h1>

    <% @questions.each do |question| %>
      <div class="panel panel-default">
        <div class="panel-heading"><%= question.title %></div>

        <div class="panel-body">
          <%= link_to question.a_1, messages_path(question_id: question.id, answer: 1),method: :post, class: "btn btn-default btn-xs" %>
          <%= link_to question.a_2, messages_path(question_id: question.id, answer: 2),method: :post, class: "btn btn-default btn-xs" %>
          <%= link_to question.a_3, messages_path(question_id: question.id, answer: 3),method: :post, class: "btn btn-default btn-xs" %>
          <%= link_to question.a_4, messages_path(question_id: question.id, answer: 4),method: :post, class: "btn btn-default btn-xs" %>
          <% if logged_in? %>
            <%= link_to 'Edit', edit_question_path(question) %> |
            <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
      </div>
    <% end %>


<br>

<%= link_to 'New Question', new_question_path if logged_in? %>
